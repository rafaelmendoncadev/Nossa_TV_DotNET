<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="description"
        content="Nossa TV - Assista +400 canais ao vivo em duas telas simultaneamente. TV, Filmes, Séries e Futebol na palma da sua mão.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
</head>

<body>
    <!-- Header Navigation -->
    <header class="main-header">
        <nav class="navbar">
            <div class="container nav-container">
                <a href="/" class="logo">
                    <svg class="logo-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="2" y="7" width="20" height="15" rx="2" ry="2"></rect>
                        <polyline points="17 2 12 7 7 2"></polyline>
                    </svg>
                    <span class="logo-text">Nossa<strong>TV</strong></span>
                </a>

                <button class="mobile-menu-toggle" onclick="toggleMobileMenu()" aria-label="Menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>

                <div class="nav-menu" id="navMenu">
                    <div class="nav-left">
                        <a href="#recursos" class="nav-link">Recursos</a>
                        <a href="#planos" class="nav-link">Planos</a>
                        <a href="#faq" class="nav-link">FAQ</a>
                        <a href="/Messages/Send" class="nav-link d-none d-md-inline-block">
                            <i class="bi bi-envelope"></i> Tire sua Dúvida
                        </a>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a href="/Messages/MyMessages" class="nav-link d-none d-md-inline-block">
                                <i class="bi bi-inbox"></i> Minhas Mensagens
                            </a>
                        }
                    </div>

                    <div class="nav-right">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <a href="/Admin/AdminMessages/Dashboard" class="nav-link nav-link-admin">
                                    <i class="bi bi-speedometer2"></i> Painel Admin
                                </a>
                            }

                            <div class="user-info d-flex align-items-center">
                                <span class="user-email d-none d-md-inline-block"><i class="bi bi-person-circle"></i>
                                    @User.Identity.Name</span>

                                <div class="dropdown ms-2">
                                    <button class="btn btn-sm btn-light dropdown-toggle" type="button" id="userMenu"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Meu
                                                Perfil</a></li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li>
                                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post"
                                                class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="bi bi-box-arrow-right me-2"></i>Sair
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        }
                        else
                        {
                            <a href="/Account/Login" class="nav-link">Entrar</a>
                            <a href="/Account/Register" class="nav-link">Cadastre-se</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="main-footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <div class="footer-logo">
                        <svg class="logo-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="2" y="7" width="20" height="15" rx="2" ry="2"></rect>
                            <polyline points="17 2 12 7 7 2"></polyline>
                        </svg>
                        <span class="logo-text">Nossa<strong>TV</strong></span>
                    </div>
                    <p class="footer-description">
                        A melhor plataforma de streaming com +400 canais ao vivo.<br>
                        Assista em duas telas simultaneamente.
                    </p>
                    <div class="social-links">
                        <a href="#" aria-label="Facebook">
                            <svg viewBox="0 0 24 24" fill="currentColor">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                            </svg>
                        </a>
