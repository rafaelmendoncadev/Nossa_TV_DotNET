@model Nossa_TV.ViewModels.AdminMessageListViewModel
@{
    ViewData["Title"] = "Gerenciar Mensagens";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col">
            <h2>Gerenciar Mensagens</h2>
        </div>
        <div class="col-auto">
            <a asp-action="Dashboard" class="btn btn-info">
                <i class="bi bi-graph-up me-1"></i>Dashboard
            </a>
        </div>
    </div>

    <!-- Estatísticas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Total</h5>
                    <h2>@Model.TotalMessages</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Não Lidas</h5>
                    <h2>@Model.UnreadMessages</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Novas</h5>
                    <h2>@Model.NewMessages</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Respondidas</h5>
                    <h2>@Model.RepliedMessages</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="">Todos</option>
                        <option value="New" selected="@(Model.StatusFilter == "New")">Novas</option>
                        <option value="Read" selected="@(Model.StatusFilter == "Read")">Lidas</option>
                        <option value="Replied" selected="@(Model.StatusFilter == "Replied")">Respondidas</option>
                        <option value="Archived" selected="@(Model.StatusFilter == "Archived")">Arquivadas</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Data</label>
                    <input type="date" name="date" class="form-control" value="@Model.DateFilter?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-funnel me-1"></i>Filtrar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>Limpar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista de Mensagens -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Status</th>
                            <th>De</th>
                            <th>Email</th>
                            <th>Assunto</th>
                            <th>Data</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model.Messages)
                        {
                            <tr class="@(!message.IsRead ? "fw-bold" : "")">
                                <td>
                                    <span class="badge @GetStatusBadgeClass(message.Status)">
                                        @GetStatusText(message.Status)
                                    </span>
                                </td>
                                <td>@message.SenderName</td>
                                <td>@message.SenderEmail</td>
                                <td>@message.Subject</td>
                                <td>@message.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@message.Id" class="btn btn-sm btn-primary" title="Ver detalhes">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <form asp-action="Archive" asp-route-id="@message.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-warning" title="Arquivar">
                                            <i class="bi bi-archive"></i>
                                        </button>
                                    </form>
                                    <form asp-action="Delete" asp-route-id="@message.Id" method="post" class="d-inline" 
                                          onsubmit="return confirm('Tem certeza que deseja excluir esta mensagem?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger" title="Excluir">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Paginação">
                    <ul class="pagination justify-content-center">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" 
                                   asp-route-status="@Model.StatusFilter" 
                                   asp-route-date="@Model.DateFilter?.ToString("yyyy-MM-dd")">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "New" => "bg-secondary",
            "Read" => "bg-info",
            "Replied" => "bg-success",
            "Archived" => "bg-warning text-dark",
            _ => "bg-secondary"
        };
    }

    string GetStatusText(string status)
    {
        return status switch
        {
            "New" => "Nova",
            "Read" => "Lida",
            "Replied" => "Respondida",
            "Archived" => "Arquivada",
            _ => status
        };
    }
}
