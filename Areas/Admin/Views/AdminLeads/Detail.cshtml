@model Nossa_TV.ViewModels.LeadDetailViewModel
@{
    ViewData["Title"] = "Detalhes do Lead";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-person-fill me-2"></i>Detalhes do Lead</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Voltar à Lista
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-4 mb-4">
            <!-- Informações do Lead -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Informações do Lead</h5>
                </div>
                <div class="card-body">
                    <p><strong>Nome:</strong><br />@Model.Name</p>
                    <p><strong>Email:</strong><br /><a href="mailto:@Model.Email">@Model.Email</a></p>
                    <p><strong>Telefone:</strong><br />@(Model.Phone ?? "Não informado")</p>
                    <hr />
                    <p><strong>Primeira Interação:</strong><br />@Model.FirstContactDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Última Interação:</strong><br />@Model.LastContactDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Total de Mensagens:</strong><br />
                        <span class="badge bg-primary fs-6">@Model.MessageCount</span>
                    </p>
                </div>
            </div>

            <!-- Tags -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Tags</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        @if (Model.Tags != null && Model.Tags.Any())
                        {
                            @foreach (var tag in Model.Tags)
                            {
                                <form asp-action="RemoveTag" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="leadId" value="@Model.Id" />
                                    <input type="hidden" name="tag" value="@tag" />
                                    <button type="submit" class="btn btn-sm btn-outline-secondary mb-1">
                                        @tag <i class="bi bi-x"></i>
                                    </button>
                                </form>
                            }
                        }
                        else
                        {
                            <p class="text-muted">Nenhuma tag adicionada</p>
                        }
                    </div>
                    
                    <form asp-action="AddTag" method="post" class="input-group">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="leadId" value="@Model.Id" />
                        <input type="text" name="tag" class="form-control" placeholder="Nova tag..." />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus"></i>
                        </button>
                    </form>
                </div>
            </div>

            <!-- Notas -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Notas</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateNotes" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="leadId" value="@Model.Id" />
                        <textarea name="notes" class="form-control mb-2" rows="4" 
                                  placeholder="Adicione notas sobre este lead...">@Model.Notes</textarea>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-save me-1"></i>Salvar Notas
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <!-- Histórico de Mensagens -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-envelope me-2"></i>Histórico de Mensagens</h5>
                </div>
                <div class="card-body">
                    @if (Model.Messages.Count == 0)
                    {
                        <p class="text-muted text-center py-4">Nenhuma mensagem encontrada.</p>
                    }
                    else
                    {
                        <div class="timeline">
                            @foreach (var message in Model.Messages)
                            {
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between mb-2">
                                            <h6 class="mb-0">@message.Subject</h6>
                                            <span class="badge @GetStatusBadgeClass(message.Status)">
                                                @GetStatusText(message.Status)
                                            </span>
                                        </div>
                                        <p class="text-muted small mb-2">
                                            <i class="bi bi-calendar me-1"></i>@message.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                            @if (message.ReplyCount > 0)
                                            {
                                                <span class="ms-2">
                                                    <i class="bi bi-chat-left-text me-1"></i>@message.ReplyCount resposta(s)
                                                </span>
                                            }
                                        </p>
                                        <p class="mb-2">@message.MessageContent</p>
                                        <a asp-controller="AdminMessages" asp-action="Detail" asp-route-id="@message.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i>Ver Detalhes
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "New" => "bg-secondary",
            "Read" => "bg-info",
            "Replied" => "bg-success",
            "Archived" => "bg-warning text-dark",
            _ => "bg-secondary"
        };
    }

    string GetStatusText(string status)
    {
        return status switch
        {
            "New" => "Nova",
            "Read" => "Lida",
            "Replied" => "Respondida",
            "Archived" => "Arquivada",
            _ => status
        };
    }
}
